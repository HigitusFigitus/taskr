<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for @task do |f| %>
  <%= f.input :content %>
  <%= f.input :state %>
  <%= f.button :submit %>
<% end %>

<p>
  <%= link_to 'All Tasks', tasks_path %>
</p>