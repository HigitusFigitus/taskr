<h1>To Do</h1>
<p><%= link_to 'New Task', new_task_path %></p>
<ul>
  <% @to_do.each do |task| %>
    <li>Content: <%= task.content %> | State: <%= task.state %>
      <%= link_to 'Show', task_path(task) %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %><%= link_to 'Mark as Doing', update_state_task_path(task, state: 'doing'), method: :put %></li>
  <% end %>
</ul>

