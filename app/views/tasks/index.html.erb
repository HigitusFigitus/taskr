<h1>Tasks</h1>
<p><%= link_to 'New Task', new_task_path %></p>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.content %> <%= link_to 'Show', task_path(task) %> <%= link_to 'Edit', edit_task_path(task) %> <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
  <% end %>
</ul>