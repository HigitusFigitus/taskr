<ul>
  <li>Content: <%= task.content %> | State: <%= task.state %>
  <%= link_to 'Show', task_path(task) %>
  <%= link_to 'Edit', edit_task_path(task) %>
  <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>

  <% if task.state == 'doing' %>
    <%= link_to 'Mark as Doing', update_state_task_path(task, state: 'doing'), method: :put %>
    <%= link_to 'Mark as Done', update_state_task_path(task, state: 'done'), method: :put %></li>
  <% else %>
    <%= link_to 'Mark as Doing', update_state_task_path(task, state: 'doing'), method: :put %>
  <% end %>
</ul>